<%= form_with(model: troca) do |form| %>
  <% if troca.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(troca.errors.count, "error") %> prohibited this troca from being saved:</h2>

      <ul>
        <% troca.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.label :produto_id %>
    <%= form.select :produto_id, Produto.all.collect {|p| [p.nome, p.id] }, {include_blank: true}, class:"form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :cliente_id %>
    <%= form.select :cliente_id, Cliente.all.collect {|c| [c.usuario, c.id] }, {include_blank: true}, class:"form-control" %>
  </div>


  <% if troca.persisted? %>

    <div class="field form-group">
      <%= form.label :status %>
      <%= form.select :status, Troca.statuses.collect  {|s| [s[0], s[0]]}, {include_blank: true}, class:"form-control" %>
    </div>

  <% end %>
<br>
  <div class="actions">
    <%= form.submit class:"btn btn-primary" %>
  </div>
<% end %>
